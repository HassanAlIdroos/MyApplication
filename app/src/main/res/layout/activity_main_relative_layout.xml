<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:id="@+id/imgTonyShark"
            android:layout_centerInParent="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="5dp"
            android:src="@drawable/tony_stark"
    />
    <TextView
            android:id="@+id/txtLayoutHeader"
            android:layout_below="@id/imgTonyShark"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="Tony Shark"/>
    <TextView
            android:id="@+id/txtEmail"
            android:layout_below="@id/txtLayoutHeader"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="tony@sharkindustries.com"/>

    <TextView
            android:id="@+id/txtNumber"
            android:layout_below="@id/txtEmail"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 11155555"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="18sp"/>
    <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_alignParentTop="true"
            android:hint="Enter your name"
            android:layout_margin="20dp"
            android:layout_gravity="center"/>
    <Button
            android:id="@+id/btnSubmit"
            android:layout_alignParentBottom="true"
            android:text="Submit"
            android:background="#90EE90"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</RelativeLayout>